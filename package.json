{
  "name": "tulip-file-explorer",
  "private": true,
  "version": "1.4.3-2",
  "description": "A modern cross-platform file explorer with glass effect UI",
  "author": "Atish Ak Sharma <atishaksharma@gmail.com> (https://atishakasharma.com/)",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "dist": "vite build && electron-builder --win --mac --linux"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^26.4.0",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tulip.fileexplorer",
    "productName": "Tulip File Explorer",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!**/*.map",
      "!**/node_modules/.cache/**",
      "!**/.git/**",
      "!**/tests/**",
      "!**/docs/**"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "build/icons/512x512.png",
      "target": {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "linux": {
      "icon": "build/icons/512x512.png",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    }
  }
}