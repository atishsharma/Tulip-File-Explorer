{
  "name": "tulip-file-explorer",
  "private": true,
  "version": "1.4.3",
  "description": "A modern cross-platform file explorer with glass effect UI",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^26.4.0",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tulip.fileexplorer",
    "productName": "Tulip File Explorer",
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage",
      "category": "Utility"
    }
  }
}